CC = g++
CFLAGS = -Wall -v -g -ferror-limit=100 -Wl -Xlinker
CSTD = -std=c++17
CSYM = -D ADD_FEEDBACK=1
aligner_only: aligner.test.o aligner.o
	$(CC) $(CSTD) -o tester aligner.test.o aligner.o
aligner.test.o: aligner.test.cpp ../include/aligner.hpp
	$(CC) $(CSTD) -c aligner.test.cpp
aligner.o: ../src/aligner.cpp ../include/aligner.hpp ../../utils/TypeAbbreviations.hpp ../../utils/BiowokHelperFunctions.hpp ../../utils/FeedbackMacro.hpp
	$(CC) $(CSTD) -c ../src/aligner.cpp $(CSYM)
clean:
	rm ../../utils/TypeAbbreviations.hpp.gch ../../utils/BiowokHelperFunctions.hpp.gch ../../utils/FeedbackMacro.hpp.gch aligner.o aligner.test.o